{
  "manifest_version": 3,
  "name": "Spectral Scribe",
  "version": "1.3",
  "description": "AI-driven text analysis tools for processing and analyzing text from web pages, YouTube videos, and user input.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_icon": "resources/spectralscribe-logo50x.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["popup.js"]
    }
  ],
  "commands": {
  "_execute_action": {
    "suggested_key": {
      "default": "Ctrl+I",
      "mac": "Command+I"
    },
    "description": "Open Spectral Scribe"
  }
}
}